<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.vendor.profil.FormAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Your Product"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:gravity="center"/>
        <!-- Field: Nama Masakan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Masakan"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama masakan"
            android:padding="12dp"
            android:background="@drawable/rounded_shape"
            android:layout_marginTop="8dp" />

        <!-- Field: Gambar Masakan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gambar Masakan"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_placeholder"
            android:contentDescription="Gambar Masakan"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_shape" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Gambar"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white" />

        <!-- Field: Bahan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan bahan masakan"
            android:padding="12dp"
            android:background="@drawable/rounded_shape"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Field: Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan deskripsi masakan"
            android:padding="12dp"
            android:background="@drawable/rounded_shape"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="5" />

        <!-- Button Simpan -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>